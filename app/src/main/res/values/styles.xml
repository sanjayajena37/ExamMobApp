<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#aaa</item>
    </style>
    <style name="ThemeWhite" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/orangeGradientStart</item>
        <item name="android:textColorPrimary">@color/grey3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyDatePickerStyle" parent="android:Theme.Material.Light.Dialog" tools:ignore="NewApi">
        <item name="android:headerBackground">@color/colorPrimaryBG</item>
        <item name="android:textColor">@color/colorPrimaryBG</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/colorPrimaryDark</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorPrimary</item>
    </style>

    <style name="DocumentCardStyle">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
    </style>

    <style name="DocumentTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="BigTextViewLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">@dimen/_3ssp</item>
    </style>

    <style name="DashboardLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:textColor">@color/menu_light_blue_grey</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2.1</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_radiobtn_white_states</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@drawable/radiobtn_text_color_states</item>
    </style>

    <style name="MenuIconView">
        <item name="android:layout_width">@dimen/_22sdp</item>
        <item name="android:layout_height">@dimen/_0sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MenuTextView">
        <item name="android:layout_width">@dimen/_0sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MenuLineView">
        <item name="android:layout_width">@dimen/_0sdp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/menu_line_color</item>
    </style>

    <style name="AppCompatDarkButton">
        <item name="android:layout_width">@dimen/_0sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.03</item>
        <item name="android:padding">@dimen/_13sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="MyTransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TextViewStyleUpdateProfile">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.15</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextStyleUpdateProfile">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_opacity_50</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.02</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:background">@drawable/rounded_edittext_states_update_profile</item>
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_spinner_bg</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_12sdp</item>
        <item name="android:layout_marginRight">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="EditTextStyleSignUp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_opacity_80</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_21sdp</item>
        <item name="android:layout_marginEnd">@dimen/_21sdp</item>
        <item name="android:background">@drawable/rounded_edit_text_states_sign_up</item>
        <item name="android:paddingLeft">@dimen/_13sdp</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_19sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>