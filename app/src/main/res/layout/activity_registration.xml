<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground">

    <ImageView
        android:id="@+id/leftarrowimg"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:src="@drawable/ic_left_arrow"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:text="SIGN UP"
        android:layout_marginTop="@dimen/_40sdp"
        android:textColor="@color/gradiantblue"
        />
    <ImageView
        android:id="@+id/atithyalogo"
        android:layout_gravity="center"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"

        android:padding="@dimen/_10sdp"
        android:src="@drawable/odishalogo"

        />
   <!-- <include layout="@layout/costem_toolbar" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/numberedittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:background="@drawable/shape_white"
            android:hint=" Enter Mobile No. "
            android:maxLength="10"
            android:inputType="number"
            android:paddingStart="@dimen/_15sdp"
            android:textColorHint="@color/deepgrya"
            android:elevation="@dimen/cardview_default_elevation"
            android:paddingEnd="@dimen/_15sdp"/>
    <EditText
        android:id="@+id/pinedittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:background="@drawable/shape_white"
        android:hint=" Enter Pin "
        android:elevation="@dimen/cardview_default_elevation"
        android:maxLength="4"
        android:textColorHint="@color/deepgrya"
        android:inputType="numberPassword"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"/>
    <EditText
        android:id="@+id/repinedittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:background="@drawable/shape_white"
        android:maxLength="4"
        android:elevation="@dimen/cardview_default_elevation"
        android:textColorHint="@color/deepgrya"
        android:hint=" Enter Repin "
        android:inputType="numberPassword"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"/>
    <!--</android.support.design.widget.TextInputLayout>-->
    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/shape_button"
        android:elevation="@dimen/cardview_default_elevation"
        android:textSize="@dimen/_15sdp"
        android:text="create account"
        android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>