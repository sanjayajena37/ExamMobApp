    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/atithyalogo"
            android:layout_gravity="center"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/odishalogo"

            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="@dimen/_1sdp"
            android:padding="@dimen/_10sdp"
            android:text="Please enter your mobile number."
            android:textAllCaps="false"
            android:textColor="@color/black"


            />

        <EditText
            android:id="@+id/edtMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23sdp"
            android:layout_marginLeft="@dimen/_23sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/deepgrya"
            android:gravity="center_horizontal"
            android:hint="e.g 9776384460"
            android:inputType="phone"
            android:letterSpacing="0.01"
            android:maxLength="10"
            android:saveEnabled="false"
            android:textColor="@android:color/black"
            android:textColorHint="@color/deepgrya"
            android:textSize="@dimen/_25sdp" />
        <!--</android.support.design.widget.TextInputLayout>-->

        <Button
            android:id="@+id/otp_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_button"
            android:elevation="@dimen/cardview_default_elevation"
            android:textSize="@dimen/_15sdp"
            android:text=" Send OTP "
            android:textColor="@color/white" />

