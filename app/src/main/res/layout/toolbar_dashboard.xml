<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbarDashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@drawable/gradient_toolbar_bg_horizontal"
    android:minHeight="?attr/actionBarSize"
    android:padding="0dp"
    app:contentInsetLeft="10dp"
    app:contentInsetRight="10dp"
    app:contentInsetEnd="5dp"
    app:contentInsetStart="5dp">


    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="start"
        android:padding="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_left_arrowwhite"/>
    <ImageView
        android:id="@+id/navigationimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="start"
        android:padding="8dp"
        android:visibility="visible"
        android:src="@drawable/ic_navigation"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLayout"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:padding="5dp">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/reload"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:visibility="gone"
            android:src="@drawable/ic_reload"/>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/logout"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:visibility="gone"
            android:src="@drawable/ic_log_out_icon"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarTitle"
        android:text="IRMS (CAMS)"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14ssp"
        android:layout_marginStart="@dimen/_10sdp"
        tools:ignore="HardcodedText" />


</androidx.appcompat.widget.Toolbar>


